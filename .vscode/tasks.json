  "version": "2.0.0",
  "tasks": [
    {
      "label": "‚¨ÜÔ∏è UP (CMA)",
      "detail": "Build if needed then run a local docker environment",
      "type": "shell",
      "command": "GIT_COMMIT=$(git rev-parse HEAD) docker compose up",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "label": "‚¨áÔ∏è DOWN (CMA)",
      "detail": "Drop any stopped containers",
      "type": "shell",
      "command": "docker compose down",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "label": "üßπ CLEAN (CMA)",
      "detail": "Will drop the containers, then remove the related images and volumes",
      "type": "shell",
      "command": "docker compose down --rmi local -v",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "label": "üèóÔ∏è REBUILD (CMA)",
      "detail": "Drop and remove everything, then rebuild with no cache",
      "type": "shell",
      "command": "docker compose down --rmi local -v && docker compose build --no-cache",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "label": "üîé LINT (CMA)",
      "detail": "Run lint checks against the code",
      "type": "shell",
      "command": "docker compose exec app npm run lint",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "label": "‚úÖ TEST (CMA)",
      "detail": "Run unit tests in docker",
      "type": "shell",
      "command": "docker compose exec app npm test",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "label": "üóÑÔ∏è DB (CMA)",
      "detail": "Will setup (or reset) both the main and test db's",
      "type": "shell",
      "command": "docker compose exec app /bin/sh -c 'npm run reset-db && npm run create-test-db && npm run reset-test-db'",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "label": "üóÑÔ∏èüí• DB NUKE (CMA)",
      "detail": "Will drop then re-create both db's",
      "type": "shell",
      "command": "docker compose exec app /bin/sh -c 'npm run nuke-db && npm run nuke-test-db'",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "label": "üíª OPEN (CMA)",
      "detail": "Will open /bin/sh in the running 'app' container",
      "type": "shell",
      "command": "docker compose exec app /bin/sh",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      }
    }
  ]
}
